# Production Environment Configuration
# Copy this file to config.env and update with your actual production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (PostgreSQL)
# Replace with your production database credentials
DB_HOST=your_production_database_host
DB_PORT=5432
DB_NAME=your_production_database_name
DB_USER=your_production_database_user
DB_PASSWORD=your_production_database_password
DATABASE_URL=postgresql://your_production_database_user:your_production_database_password@your_production_database_host/your_production_database_name

# JWT Configuration
# IMPORTANT: Use a strong, unique secret key in production
JWT_SECRET=your_super_strong_production_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRE=7d

# OTP Configuration
OTP_EXPIRE=300000 # 5 minutes in milliseconds

# SMS Configuration (Twilio)
# Replace with your production Twilio credentials
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_PHONE_NUMBER=your_production_twilio_phone_number
DEFAULT_COUNTRY_CODE=1

# Call Masking Configuration (Twilio Proxy)
TWILIO_PROXY_SERVICE_SID=your_production_twilio_proxy_service_sid

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_email_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_PATH=./uploads

# Cloudinary Configuration
# Replace with your production Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Paytm Payment Gateway Configuration
# Replace with your production Paytm merchant credentials
PAYTM_MID=your_production_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_production_paytm_merchant_key
PAYTM_WEBSITE=WEBPROD
PAYTM_CHANNEL_ID=WAP
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CALLBACK_URL=https://yourdomain.com/api/payments/paytm-callback

# LocationIQ Configuration
# Get your API key from https://locationiq.com/
LOCATIONIQ_API_KEY=your_production_locationiq_api_key

# Security Configuration
# Production security settings
ENABLE_DEBUG_LOGGING=false
ENABLE_QUERY_LOGGING=false
ENABLE_CORS_DEBUG=false
FORCE_HTTPS=true
SECURE_COOKIES=true
TRUST_PROXY=true
