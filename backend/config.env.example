# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
# Replace with your actual database credentials
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
# External URL (primary connection string)
DATABASE_URL=postgresql://your_database_user:your_database_password@your_database_host/your_database_name

# JWT Configuration
# IMPORTANT: Change this to a strong, unique secret key in production
JWT_SECRET=your_super_strong_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# OTP Configuration
OTP_EXPIRE=300000 # 5 minutes in milliseconds

# SMS Configuration (Twilio)
# Replace with your actual Twilio credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Default country code for phone numbers (1 for US, 91 for India)
DEFAULT_COUNTRY_CODE=1

# Call Masking Configuration (Twilio Proxy)
TWILIO_PROXY_SERVICE_SID=your_twilio_proxy_service_sid

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_PATH=./uploads

# Cloudinary Configuration
# Replace with your actual Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Paytm Payment Gateway Configuration
# Replace with your actual Paytm merchant credentials
PAYTM_MID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key
PAYTM_WEBSITE=WEBSTAGING
PAYTM_CHANNEL_ID=WAP
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CALLBACK_URL=http://localhost:5000/api/payments/paytm-callback

# Security Configuration
# Enable/disable features based on environment
ENABLE_DEBUG_LOGGING=false
ENABLE_QUERY_LOGGING=false
ENABLE_CORS_DEBUG=false

# Production Security Settings
# These should be set to true in production
FORCE_HTTPS=false
SECURE_COOKIES=false
TRUST_PROXY=false
