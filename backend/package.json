{
  "name": "buildxpert-backend",
  "version": "1.0.0",
  "description": "Backend API for BuildXpert - User and Provider Apps",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:pm2": "pm2-runtime start ecosystem.config.js --env production",
    "start:cluster": "pm2-runtime start ecosystem.config.js --instances max --env production",
    "dev": "nodemon server.js",
    "db:migrate": "node migrations/run-all-migrations.js",
    "db:migrate:force": "node migrations/run-all-migrations.js --force",
    "db:migrate:status": "node migrations/run-all-migrations.js --status",
    "db:seed": "node scripts/seed.js",
    "db:hash-passwords": "node scripts/hash-existing-passwords.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:twilio": "node test-twilio-otp.js"
  },
  "keywords": [
    "buildxpert",
    "api",
    "backend",
    "nodejs",
    "postgresql"
  ],
  "author": "BuildXpert Team",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "on-finished": "^2.4.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "pm2": "^5.3.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "ua-parser-js": "^1.0.38",
    "uuid": "^9.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
